<div class="row">
	<div class="col-md-12">
		<h2 class="headline first-child text-color">
	  <span class="border-color"><%= @show.name %>: season <%= @season.season_number %> Episode <%= @episode.episode_number %></span>
	</h2>
		 <%= form_for([@show, @season, @episode], html: { class: "" } ) do |f| %>
	        <div class="form-group">
	        	<%= f.text_area :download_link, class: "form-control", placeholder: "http://example.site", rows: 4 %>
	        </div>
	        <%= f.submit "Sumbit", class: "btn btn-green" %>
        <% end %>
	</div>
</div>