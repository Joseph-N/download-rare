<%= form_for(movie) do |f| %>
  <div class="form-group">
  <%= f.hidden_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.hidden_field :release_date, class: "form-control"  %>
  </div>
  <div class="form-group">
  <%= f.hidden_field :tmdb_id, class: "form-control"  %>
  </div>
  <div class="form-group">
  <%= f.hidden_field :poster, class: "form-control"  %>
  </div>
  <div class="form-group">
  <%= f.hidden_field :backdrop, class: "form-control"  %>
  </div>
  <div class="form-group">
  	<%= f.label :download_link %>
  	<%= f.text_area :download_link, class: "form-control", rows: 3 %>
  </div>
  </div>
  <div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
  <%= f.submit "Save Changes", class: "btn btn-primary" %>
  </div>
<% end %>