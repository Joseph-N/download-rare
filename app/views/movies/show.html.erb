<% title "#{@movie["original_title"]} (#{return_year(@movie["release_date"])})"  %> 

<%= provide(:prefix, "og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# video: http://ogp.me/ns/video#") %>

<%= content_for :meta_tags do %>
  <meta property="fb:app_id"      		content="286994061452571" /> 
  <meta property="og:type"        		content="video.movie" /> 
  <meta property="og:url"         		content="<%= request.url %>" /> 
  <meta property="og:title"       		content="<%= @movie["original_title"] %>" /> 
  <meta property="og:image"       		content="<%= @tmdb.image_url("poster", "w342", @record.poster) %>" /> 
  <meta property="og:description" 		content="<%= truncate(@movie["overview"], length: 400)  %>" /> 
  <meta property="video:duration" 		content="<%= @movie["runtime"] %>" />
  <meta property="video:release_date"	content="<%= @movie["release_date"] %>" />
  <meta name="description" content="<%= truncate(@movie["overview"], length: 400) %>">
<% end %>

<%= content_for :page_css do %>
	<%= stylesheet_link_tag "prettyPhoto" %>
	<style type="text/css">
	.download:before{
		content: "<%= number_to_human_size(@record.file_size) %>";
		position: absolute;
		top: 0;
		right: 15px;
		padding: 3px 8px;
		border-radius: 0 0 0 3px;
		background: #E35E54;
		color: white;
	}
	</style>
<% end %>

<%= content_for :page_js do %>
	<%= javascript_include_tag "jquery.raty", "jquery.prettyPhoto", "jquery.carouFredSel-6.2.1", "jtruncate.pack", "init" %>
	<script>
		$(document).ready(function() {
			$('.overview').jTruncate({  
		        length: 310,
		        minTrail: 0,
		        moreText: "Read More",
		        lessText: "Read Less",
		        moreAni: "fast",
		        lesAni: "fast"
		    }); 
		});
	</script>
<% end %>

<div class="row">
	<div class="col-md-9">
		<div class="row">

			  	<%= render 'shared/google_ad_2' %>

		</div>
		<hr>
		<div class="row">
			<div class="col-md-4">
					<div class="download">
			    		<%= image_tag(@tmdb.image_url("poster", "w342", @record.poster), class: "img-responsive") %>
					</div>					
								
			</div>
			<div class="col-md-8">
				<div class="row" style="margin-bottom: 10px;">
			  		<div class="col-md-9">
						<h3 class="primary-font first-child"><%= @movie["original_title"] %> (<%= return_year(@movie["release_date"]) %>) <%= link_to raw('<i class="fa fa-pencil"></i>'), '#', "data-toggle"=>"modal", "data-target"=>"#editMovie" if admin_signed_in? %></h3>
							<div class="raty" data-score=""></div>
							<span class="text-muted reviews" style="margin-left: 1px" id="imdb-rating" data-id="<%= @movie["imdb_id"] %>"></span>
					</div>
					<div class="col-md-3 text-right">
						<%= link_to image_tag("imdb.png"), "http://www.imdb.com/title/#{@movie["imdb_id"]}", target: "_blank" %>
					</div>
				</div>
				<%= render partial: 'shared/google_plus_button' %>
				<%= render partial: 'shared/twitter_share' %>
				<%= render partial: 'shared/facebook_like', locals: { url: request.url } %>

				<p class="overview" style="margin-top: 10px;">
					<%= @movie["overview"] %>
				</p>

					  <h5>Tagline</h5>
					  <p class="text-muted"><%= @movie["tagline"].present? ? @movie["tagline"] : "No tagline available for this movie" %></p>
					  <hr>

				<div class="row">
					<div class="col-md-6">
					<%= link_to raw('<i class="fa fa-youtube-play"></i> Watch Trailer'), "https://www.youtube.com/watch?v=#{@trailer}", class: "btn btn-lg btn-default btn-block", rel: "prettyPhoto", title: "watch trailer" %>
					</div>
					<div class="col-md-6">
						<% if @record.download_link.present? %>
						<%= link_to raw('<i class="fa fa-download"></i> Direct Download'), download_path(resource: "movie", id: @record.id), class: "btn btn-lg btn-primary btn-block", title: "download #{@movie["original_title"]} movie", style: "color: #fff;" %>
						<% else %>
						<%= link_to "Direct link not available", '#', class: "btn btn-lg btn-primary btn-block disabled", style: "color: #fff;" %>
						<% end %>
					</div>
				</div>

			</div>

		</div>
		<div class="row top-20">
			<div class="col-md-12">
							<% unless (@record.magnetic_link || @record.torrent_file_link).nil? %>
			<table class="table table-striped table-bordered">
      <thead>
        <tr>
        	<td colspan="3"><strong>Torrent info</strong></td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Size</td>
          <td colspan="2"><%= @torrent["Size"] %></td>
        </tr>
        <tr>
          <td>Quality</td>
          <td colspan="2"><%= @torrent["Quality"] %></td>
        </tr>
        <tr>
          <td>Seeders</td>
          <td colspan="2"><%= @torrent["TorrentSeeds"] %></td>
        </tr>
        <tr>
          <td>Peers</td>
          <td colspan="2"><%= @torrent["TorrentPeers"] %></td>
        </tr>
        <tr>
          <td>Download</td>
          <td>
          	<%= link_to image_tag('magnet_link.png'), download_path(resource: "movie", id: @record.id, type: "magnetic_link"), title: "Magnetic link" %>
          </td>
          <td>
          	<%= link_to raw("<i class='fa fa-file'></i> Download Torrent"), download_path(resource: "movie", id: @record.id, type: "torrent_file"), class: "btn btn-lg btn-green btn-block", title: "download #{@movie["original_title"]} movie torrent" %>
          </td>
        </tr>
      </tbody>
    </table>

			<% else %>
				<button type="button" class="btn btn-warning btn-block btn-lg disabled">No torrent links were found.</button>
			<% end %>
			</div>
		</div>
	</div>
	<div class="col-md-3">
		<%= render 'shared/facebook_likebox_small' %>
		<hr>
		<%= render 'shared/google_ad' %>
		
	</div>
</div>

<!-- Screenshots -->
<div class="row">
  <div class="col-sm-12">
	<h3 class="headline text-color">
	  <span class="border-color">Screenshots</span>
			<span class="pull-right" id="controls">
				<span id="portfolio-next" class="next black">
				<i class="fa fa-arrow-left"></i>
			</span>
            <span id="portfolio-prev" class="prev black">
                <i class="fa fa-arrow-right"></i>
            </span>
		</span>
	</h3>
	<div class="row">
		<div id="caroufredsel">

		<% @backdrops.each do |image| %>
			<div class="col-md-3 col-xs-12 col-sm-4">
			    <div class="movie-item">
			    <a href="<%= @tmdb.image_url("backdrop", "original", image["file_path"])%>" rel="prettyPhoto[gallery1]" title=""><%= image_tag(@tmdb.image_url("backdrop", "w300", image["file_path"]), class: "img-responsive center-block", title: "") if image['file_path'] %></a>

				</div>
			</div>
		
		<% end %>
		</div>
	</div>
  </div>
</div> <!-- / .row -->

<div class="row">
  <div class="col-sm-8">
  <%= render 'shared/comments' %>

  </div>
  <div class="col-md-4">
  <%= render 'shared/google_ad_1' %>
  </div>
</div> <!-- / .row -->


<% if admin_signed_in? %>
<!-- Modal -->
<div class="modal fade" id="editMovie" tabindex="-1" role="dialog" aria-labelledby="editMovieLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Edit: <%= @movie["original_title"] %></h4>
      </div>
      <div class="modal-body">
      <%= render :partial => 'form', locals: { movie: @record } %>
    </div>
  </div>
</div>
<% end %>