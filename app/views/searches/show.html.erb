<% title "Search" %>
<div class="row">
		<h2 class="headline first-child text-color">
	<span class="border-color">Found <%= @search.movies.count %> Matches</span>
</h2>

    <p><strong>Title: </strong> <%= @search.title.present? ? @search.title : "None" %>
      <strong>Year: </strong> <%= @search.year.present? ? @search.year : "None" %>
      <strong>Genre: </strong> <%= @search.genre.present? ? @search.genre : "None" %>
      <strong>Rating: </strong> <%= @search.rating.present? ? @search.rating : "None" %>
    </p>
    <hr>
    <% @search.movies.each do |movie| %>
        <div class="col-md-3 bottom-20">
      <div class="poster">
          <%= link_to image_tag(@tmdb.image_url("poster", "w342", movie.poster), class: "img-responsive"), movie_path(movie) %>
      <div class="caption"><%= movie.title %></div>

      </div>
      </div>
    <% end %>
</div>