<% title "Search Movies & Shows" %>
  <div class="row">
    <div class="col-md-9">
      <div class="row">
        <h2 class="headline first-child text-color">
          <span class="border-color">Movie Results</span>
        </h2>
        <%= render 'shared/google_ad_2' %>
        <% unless @movies.nil? %>
          <% @movies.each do |movie| %>
              <div class="col-md-3 bottom-20">
            <div class="poster">
                <%= link_to image_tag(@tmdb.image_url("poster", "w185", movie.poster), class: "img-responsive"), movie_path(movie) %>
            <div class="caption"><%= movie.title %></div>

            </div>
            </div>
          <% end %>
          <% end %>
          </div>
          <div class="row">
            <h2 class="headline first-child text-color">
              <span class="border-color">TV shows Results</span>
            </h2>
            <%= render 'shared/google_ad_1' %>
            <% unless @shows.nil? %>
              <% @shows.each do |show| %>
                  <div class="col-md-3 bottom-20">
                <div class="poster">
                    <%= link_to image_tag(@tmdb.image_url("poster", "w185", show.poster), class: "img-responsive"), tv_show_path(show) %>
                <div class="caption"><%= show.name %></div>

                </div>
                </div>
              <% end %>
              <% end %>
              </div>
        </div>

        <div class="col-md-3">
          <%= render 'shared/facebook_likebox_small' %>
          <hr>
          <%= render 'shared/google_ad' %>
        </div>
    </div>
